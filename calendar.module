/**
 * Parse calendar parts from the argument.
 *
 * Should handle the following patterns:
 * YYYY, YYYY-MM, YYYY-M, YYYY-MM-DD, YYYY-M-D, YYYY-W99, YYYY-W9
 */
function calendar_arg_parts($argument) {
  $parts = array();
  preg_match('/(\d{4})?-?(W)?(\d{1,2})?-?(\d{1,2})?/', $argument, $matches);
  if (!empty($matches[1])) {
    $parts['year'] = $matches[1];
  }
  if (!empty($matches[3])) {
    if (empty($matches[2])) {
      $parts['month'] = $matches[3];
    }
    else {
      $parts['week'] = $matches[3];
    }    
  }
  if (!empty($matches[4])) {
    $parts['day'] = $matches[4];
  }
  return $parts;
}

function calendar_arg_format($argument) {
  $format = array();
  $parts = calendar_arg_parts($argument);
  foreach ($parts as $key => $part) {
    switch ($key) {
      case 'year':
        $format[] = strlen($part) < 4 ? 'y' : 'Y';
        break;
      case 'month':
        $format[] = strlen($part) < 2 ? 'n' : 'm';
        break;
      case 'day':
        $format[] = strlen($part) < 2 ? 'j' : 'd';
        break;
      case 'week':
        $format[] = '\Ww';
        break;
    }
  }
  return implode('-', $format);
}

/**
 * Figure out what the URL of the calendar view we're currently looking at is.
 */
function calendar_real_url($view, $args) {
  return $view->url;
  
  // Add non-calendar arguments to the base url.
  $parts = explode('/', $view->url);
  $bump = 0;
  foreach ($parts as $delta => $part) {
    // If one of the args is buried in the url, add it here and adjust
    // the delta values we'll compare the calendar arg positions to.
    if (in_array($part, array('$arg', '$node', '$user', '$group'))) {
      $parts[$delta] = array_shift($args);
      $bump++;
    }
  }
  foreach ($args as $delta => $arg) {
    if (!in_array($delta + $bump, calendar_arg_positions($view)) && !empty($arg)) {
      array_push($parts, $arg);
    }
  }
  return implode('/', $parts);
}

